extends layout

block content

  p Great, let's now break down that goal into monthly goals!
  - console.log("Front end bool: " + months_needed_bool)

  - if (months_needed_bool == false)
    p How many months do you need to achieve this goal?
    form(method="post")
      select(name="months_needed")
        - for (i=1; i<13; i++) {
            option(value='#{i}') #{i}
        - }
      input.btn(type="submit", value="Enter")

  - if (months_needed_bool == true)
    - console.log("Front end num months: " + num_months)
    form(method="post")
      - for (j=1; j < (num_months + 1); j++) {
          p Enter your monthly goal for month #{j}
          input(type="text", name='month-#{j}')
      - }
      input.btn(type="submit", value="Enter")
