extends layout

block content
  div.spacing-wrapper
    div.instruction-text.fade-in.one
      p Here are your daily goals - click to see how you're doing!
    div.example-text.fade-in.two
      - for (i= 0 ; i < dg_array.length; i++)
        - if (i < ((dg_array.length/2) + 0.5))
            div.inline 
              a(href='/#') #{dg_array[i].description}
        -  else if (i == ((dg_array.length/2) + 0.5))
            br
        - if (i >= ((dg_array.length/2) +0.5))
            div.inline
              a(href='/') #{dg_array[i].description}
